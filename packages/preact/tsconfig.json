{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "jsxImportSource": "preact",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true
  }
}
