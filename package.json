{
  "name": "@klass/workspace",
  "version": "0.0.0",
  "description": "Class variant utility",
  "private": true,
  "scripts": {
    "clean": "turbo run clean",
    "build": "set COMMAND=build&&turbo run build",
    "build:unminify": "set UNMINIFY=true&&set COMMAND=build&&turbo run build --force",
    "test": "set COMMAND=test&&turbo run test",
    "test:watch": "set WATCH=true&&set COMMAND=test&&turbo run test --force",
    "dev": "turbo run dev",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flamrdevs/klass.git"
  },
  "author": "flamrdevs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flamrdevs/klass/issues"
  },
  "homepage": "https://klass.pages.dev",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@preact/preset-vite": "^2.5.0",
    "@solidjs/testing-library": "^0.8.4",
    "@testing-library/preact": "^3.2.3",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "jsdom": "^22.1.0",
    "preact": "^10.16.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "solid-js": "^1.7.8",
    "turbo": "^1.10.9",
    "typescript": "^5.1.6",
    "vite": "^4.4.6",
    "vite-plugin-dts": "^3.3.1",
    "vite-plugin-solid": "^2.7.0",
    "vitepress": "1.0.0-beta.6",
    "vitest": "^0.33.0"
  }
}
